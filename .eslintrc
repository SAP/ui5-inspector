{
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    },
    "rules": {
        "no-empty": [
            1,
            {
                "allowEmptyCatch": true
            }
        ],
        "no-implicit-coercion": [
            2,
            {
                "boolean": false,
                "string": true,
                "number": false
            }
        ],
        "no-with": 2,
        "brace-style": [
            1,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": 1,
        "no-multi-str": 2,
        "one-var": [2, "never"],
        "key-spacing": [
            1,
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "space-unary-ops": [
            2,
            {
                "words": false,
                "nonwords": false
            }
        ],
        "no-trailing-spaces": 2,
        "yoda": [2, "never"],
        "camelcase": [
            2,
            {
                "properties": "never"
            }
        ],
        "comma-style": [2, "last"],
        "curly": [2, "all"],
        "dot-notation": 2,
        "eol-last": 2,
        "operator-linebreak": [2, "after"],
        "wrap-iife": 2,
        "space-infix-ops": 2,
        "keyword-spacing": [2, {}],
        "spaced-comment": [1, "always"],
        "space-before-blocks": [2, "always"],
        "consistent-this": [1, "that"],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"]
    }
}
